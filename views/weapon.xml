<odoo>
    <data>

        <record model="ir.ui.view" id="warrior.weapon_tree">
      <field name="name">warrior weapon</field>
      <field name="model">warrior.arma</field>
      <field name="arch" type="xml">
        <tree>

                <field name="avatar" widget="image" width="50px" height="50px"/>
                <field name="name"/>
                <field name="damage"/>
                <field name="afinidad"/>

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="warrior.weapon_form">
      <field name="name">warrior armas</field>
      <field name="model">warrior.arma</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
          <group>
          <field name="avatar" widget="image"/>
          <field name="name"/>
          <field name="damage"/>
            <field name="afinidad"/>
            <field name="precio"/>
          </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="warrior.arma_kanban_view">
            <field name="name">Player</field>
            <field name="model">warrior.arma</field>
            <field name="arch" type="xml">
                <kanban>
                  <field name="id"/>
                  <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill" >
                                 <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block "
                                                         t-attf-style="background-image:url('#{kanban_image('warrior.arma', 'avatar', record.id.value, placeholder)}')">
                                                    </div>
                                    <div class="oe_kanban_details d-flex flex-column" >
                                        <a type="open">
                                            <h3 class="o_kanban_record_title oe_partner_heading">
                                                <field name="name"/>
                                            </h3>
                                        </a>
                                        <ul>
                                            <li>Damage:
                                                <field name="damage"/>
                                            </li>
                                            <li>Afinidad:
                                                <field name="afinidad"/>
                                            </li>
                                            <li>Precio:
                                                <field name="precio"/>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>