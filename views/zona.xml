<odoo>
    <data>

        <record model="ir.ui.view" id="warrior.zona_tree">
      <field name="name">warrior zona</field>
      <field name="model">warrior.zona</field>
      <field name="arch" type="xml">
         <tree>

                <field name="avatar" widget="image" width="100px" height="80px"/>
                <field name="name"/>
                <field name="dificultad"/>


        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="warrior.zona_form">
      <field name="name">warrior zonas</field>
      <field name="model">warrior.zona</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
          <group>
          <field name="avatar" widget="image"/>
          <field name="name"/>
          <field name="dificultad"/>

          </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="warrior.zona_kanban_view">
            <field name="name">Zona</field>
            <field name="model">warrior.zona</field>
            <field name="arch" type="xml">
                <kanban>
                  <field name="id"/>
                  <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill" >
                                 <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block "
                                                         t-attf-style="background-image:url('#{kanban_image('warrior.zona', 'avatar', record.id.value, placeholder)}')">
                                                    </div>
                                    <div class="oe_kanban_details d-flex flex-column" >
                                        <a type="open">
                                            <h3 class="o_kanban_record_title oe_partner_heading">
                                                <field name="name"/>
                                            </h3>
                                        </a>
                                        <ul>
                                            <li>Dificultad:
                                                <field name="dificultad"/>
                                            </li>


                                        </ul>
                                    </div>
                                </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>